<?xml version="1.0"?>
<!DOCTYPE profile>
<profile xmlns="http://www.suse.com/1.0/yast2ns" 
	xmlns:config="http://www.suse.com/1.0/configns">
  <general>
    <mode>
      <confirm config:type="boolean">true</confirm>
      <second_stage config:type="boolean">false</second_stage>
    </mode>
  </general>

  <users config:type="list">
    <user>
      <encrypted config:type="boolean">false</encrypted>
      <user_password>DataSpace24!</user_password>
      <username>rancher</username>
    </user>
    <user>
      <encrypted config:type="boolean">false</encrypted>
      <user_password>DataSpace24!</user_password>
      <username>root</username>
    </user>
  </users>

  <add-on>
    <add_on_products config:type="list">
      <listentry>
        <media_url><![CDATA[relurl://]]></media_url>
        <product>sle-module-basesystem</product>
        <product_dir>/Module-Basesystem</product_dir>
      </listentry>
    </add_on_products>
  </add-on>

  <timezone>
    <hwclock>UTC</hwclock>
    <timezone>Europe/Berlin</timezone>
  </timezone>

  <keyboard>
    <keymap>german</keymap>
  </keyboard>

  <software>
    <products config:type="list">
      <product>SLES</product>
    </products>
  </software>

  <kdump>
    <add_crash_kernel config:type="boolean">false</add_crash_kernel>
  </kdump>

  <firewall>
    <enable_firewall config:type="boolean">false</enable_firewall>
    <start_firewall config:type="boolean">false</start_firewall>
  </firewall>

  <storage>
    <start_multipath config:type="boolean">true</start_multipath>
  </storage>

  <networking>
    <routing>
      <ipv4_forward config:type="boolean">false</ipv4_forward>
      <ipv6_forward config:type="boolean">false</ipv6_forward>
      <routes config:type="list">
        <route>
          <destination>default</destination>
          <device>eth0</device>
          <gateway>172.16.4.1</gateway>
        </route>
      </routes>
    </routing>

    <dns>
      <nameservers config:type="list">
        <nameserver>172.16.4.104</nameserver>
        <nameserver>172.16.4.11</nameserver>
      </nameservers>
      <resolv_conf_policy>auto</resolv_conf_policy>
      <searchlist config:type="list">
        <search>dt.iese.de</search>
        <search>digital-twin.host</search>
      </searchlist>
    </dns>

    <interfaces config:type="list">
      <interface>
        <bootproto>static</bootproto>
        <name>eth0</name>
        <startmode>auto</startmode>
        <ipaddr>172.16.5.61</ipaddr>
        <prefixlen>22</prefixlen>
      </interface>
      <interface>
        <bootproto>static</bootproto>
        <name>eth1</name>
        <startmode>auto</startmode>
        <ipaddr>172.16.10.61</ipaddr>
        <prefixlen>24</prefixlen>
      </interface>
    </interfaces>
    <net-udev config:type="list">
      <rule>
        <name>eth0</name>
        <rule>ATTR{address}</rule>
        <value>00:25:B5:A0:00:15</value>
      </rule>
      <rule>
        <name>eth1</name>
        <rule>ATTR{address}</rule>
        <value>00:25:B5:B0:00:15</value>
      </rule>
    </net-udev>

    <ipv6 config:type="boolean">false</ipv6>
  </networking>

</profile>


